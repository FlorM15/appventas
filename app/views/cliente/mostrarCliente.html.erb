<div class="modal" id="modal">
		<div class="modal_body">
			<h2>Modificar cliente</h2>
			<form method="post" action="/cliente/modificar/<%=@cliente.id%>">
				<%= token_tag nil %>
				<label>RFC</label>
				<input type="text" name="rfc" value="<%= @cliente.rfc %>" placeholder="RFC">

				<label>Nombre</label>
				<input type="text" name="nombre_cliente" value="<%= @cliente.nombre_cliente %>" placeholder="Nombre">

				<input type="submit" name="" value="Modificar">
				<br>
			</form>
		</div>
</div>